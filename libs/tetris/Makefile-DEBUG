# C Compiler
CC=gcc
CFLAGS=-Wall -c -funsigned-char -fpack-struct -fshort-enums -Wall -Wstrict-prototypes -DPC_DEBUG -I../ledboard

# C++ Compiler
CXX=g++
CXXFLAGS=-Wall -c -std=c++0x -DPC_DEBUG -I../ledboard

# Linker
LDFLAGS=
ALLFLAGS=-Wall -funsigned-char -fpack-struct -fshort-enums -Wall -Wstrict-prototypes -L../ledboard -lledboard-debug

# Sources
CSOURCES=$(wildcard *.c)
CXXSOURCES=$(wildcard *.cpp)
OBJECTS=$(CSOURCES:.c=.o) $(CXXSOURCES:.cpp=.o)
EXECUTABLE=tetris

all: clean $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CXX) $(ALLFLAGS) $(OBJECTS) --output $@ $(LDFLAGS)

.c.o:
	$(CC) $(CFLAGS) $< -o $@

.cpp.o:
	$(CXX) $(CXXFLAGS) -o $@ $<

clean:
	rm -f $(EXECUTABLE)
	rm -f $(CSOURCES:.c=.o)
	rm -f $(CXXSOURCES:.cpp=.o)
